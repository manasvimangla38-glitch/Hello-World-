#include <stdio.h>
#include<conio.h>

int main() {
    int numbers[5];
    int i, greatest, smallest;
    float sum = 0, average;

    clrscr( );
    printf("Enter 5 numbers:\n");
    for(i = 0; i < 5; i++) {
        scanf("%d", &numbers[i]);
    }

    greatest = smallest = numbers[0];

   
    for(i = 0; i < 5; i++) {
        sum += numbers[i];

        if(numbers[i] > greatest) {
            greatest = numbers[i];
        }

        if(numbers[i] < smallest) {
            smallest = numbers[i];
        }
    }

    
    average = sum / 5;

    
    printf("Average: %.2f\n", average);
    printf("Greatest number: %d\n", greatest);
    printf("Smallest number: %d\n", smallest);

    getch ( );
return 0;
}
